{
  "name": "@internetarchive/modal-manager",
  "description": "A web component for displaying modals.",
  "repository": {
    "type": "git",
    "url": "https://github.com/internetarchive/iaux-modal-manager.git"
  },
  "license": "AGPL-3.0-only",
  "author": "Internet Archive",
  "version": "2.0.1",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\"",
    "prepare": "rimraf dist && tsc && husky install",
    "build": "tsc",
    "lint": "eslint . && prettier \"**/*.ts\" --check",
    "format": "eslint . --fix && prettier \"**/*.ts\" --write",
    "circular": "madge --circular --extensions ts .",
    "test": "tsc && npm run lint && npm run circular && wtr --coverage",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\"",
    "ghpages:build": "rimraf ghpages && npm run prepare && vite build",
    "ghpages:publish": "npm run ghpages:prepare -e $(git branch --show-current)",
    "ghpages:prepare": "npm run ghpages:build && touch ghpages/.nojekyll && npm run ghpages:generate",
    "ghpages:generate": "gh-pages -t -d ghpages -m \"Build for $(git log --pretty=format:\"%h %an %ai %s\" -n1) [skip ci]\""
  },
  "dependencies": {
    "@internetarchive/ia-activity-indicator": "^0.0.6",
    "@internetarchive/icon-close": "^1.3.4",
    "@internetarchive/icon-ia-logo": "^1.3.4",
    "@internetarchive/icon-user": "^1.3.4",
    "lit": "^2.8.0",
    "throttle-debounce": "^5.0.2"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^12.0.3",
    "@open-wc/testing": "^4.0.0",
    "@types/mocha": "^10.0.10",
    "@types/throttle-debounce": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@web/dev-server": "^0.4.6",
    "@web/test-runner": "^0.20.2",
    "concurrently": "^9.2.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-html": "^8.1.3",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-lit": "^1.15.0",
    "eslint-plugin-lit-a11y": "^4.1.4",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-wc": "^2.2.1",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "madge": "^8.0.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "sinon": "^19.0.5",
    "ts-lit-plugin": "^2.0.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "vite": "^6.3.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
